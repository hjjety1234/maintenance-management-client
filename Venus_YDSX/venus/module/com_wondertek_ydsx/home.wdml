-- @brief 重力感应按钮响应
function gravityOnSelect()
    Log:write('开启重力感应')
    -- 开启重力感应
    local result = System:setSensorStatus(0, 1, 'gravityOnCallback')
    if not result then
        Dialog:show('提示', '开启重力感应失败', 'ok')
        return 1
    end
    -- 设置重力感应灵敏度
    System:setSensorAccuracy(0, 5, 5, 5)
end
-- @brief 重力感应回调,调到历史详情界面
function gravityOnCallback(xAccle, yAccle, zAccle)
    Log:write('重力参数',xAccle, yAccle, zAccle)
    --根据重力感应返回
    if tonumber(xAccle)<-7 or tonumber(xAccle)>7 then 
        Scene:go(Alias.history,13)
    end
end
