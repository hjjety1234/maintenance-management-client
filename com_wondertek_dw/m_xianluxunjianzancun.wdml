                <image rect="10,771,460,15" src="file://image/xianluzancun_bottom.png"  style="autosize" extendstyle="1111"/>
            </node>
            <!-- 暂存信息列表加载模版 -->          
            <node name="listitem" visible="false" enable="false" active="false" style="autosize"
                  rect="0,0,460,66" extendstyle="0010" > 
                <!-- 暂存信息内容详情 -->
                <scrolltext name="xianluxunjian" rect="10,10,440,46" border="false"
                    h-align="left" v-align="center" color="#5d5c5c" scroll="true" step="4"
                    font-family="bold" text="" font-size="18" extendstyle="1111"> 
                </scrolltext>
                <image rect="5,65,450,1" src="file://image/xianluzancun_line.png"  style="autosize" extendstyle="1114" />       
