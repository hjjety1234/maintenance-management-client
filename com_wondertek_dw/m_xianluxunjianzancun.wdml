                <node rect="10,80,460,15" extendstyle="1111"  border="false">
                    <image rect="0,0,460,15" src="file://image/xianluzancun_top.png"  style="autosize" extendstyle="0010" />
                </node>
                <!-- 中间部分 -->
                <image rect="10,95,460,676" src="file://image/xianluzancun_center.png"  style="autosize" extendstyle="1111" />
                <listview name="sampleList" rect="10,95,460,676" auto-scroll="true" style="autosize"
                      auto-adjust="true" extendstyle="1111" />
