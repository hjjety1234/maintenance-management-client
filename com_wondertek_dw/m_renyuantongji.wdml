        fuyang      = {name="阜阳", cmpNum="5"},
        huainan     = {name="淮南", cmpNum="6"},
        chuzhou     = {name="滁州", cmpNum="4"},
        liuan       = {name="六安", cmpNum="10"},
        anqing      = {name="安庆", cmpNum="14"},
        chizhou     = {name="池州", cmpNum="6"},
        xuancheng   = {name="宣城", cmpNum="4"},
