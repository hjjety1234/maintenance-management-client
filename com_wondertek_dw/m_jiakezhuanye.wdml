    ---------------------------------------消息处理函数---------------------------

    function getMaxThree()
        Log:write('99999999999999999999999999999999999999999999999999999999999999999',tempcitytable)
        for x=1,3 do
            MaxIndex=1
            for i=2,16 do
                if tonumber(tempcitytable[i].broadbandinfo)*100 > tonumber(tempcitytable[MaxIndex].broadbandinfo)*100 then
                    MaxIndex=i
                end
            end
            MaxIndexTable[x]=MaxIndex
            Log:write('444444444444444444444444444444444444444444444',MaxIndex)
            tempcitytable[MaxIndex].broadbandinfo=0
        end
    end

    function sorttempcitytable()
        for i=1,3 do
            tempcitytable[i].city=citytable[MaxIndexTable[i]-1].city
            tempcitytable[i].broadbandinfo=citytable[MaxIndexTable[i]-1].broadbandinfo
            tempcitytable[i].index=MaxIndexTable[i]
        end
        Log:write('5555555555555555555555555555555555555555555555555555555',tempcitytable)
        
        local weizhi = 4
        for i=0,15 do
            if i+1 ~=MaxIndexTable[1] and i+1 ~=MaxIndexTable[2] and i+1 ~=MaxIndexTable[3] then
                tempcitytable[weizhi].city=citytable[i].city
                tempcitytable[weizhi].broadbandinfo=citytable[i].broadbandinfo
                tempcitytable[weizhi].index=i+1
                weizhi=weizhi+1
            end
        end

        Log:write('5555555555555555555555555555555555555555555555555555555',tempcitytable)
    end

    function fillcontent()
        local BaobiaoList = Sprite:findChild(rootSprite,'BaobiaoList')
        ListView:removeAllItems(BaobiaoList, 1) 
        local BaobiaoListItem = Sprite:findChild(rootSprite,'BaobiaoListItem')
        Log:write('****************************',BaobiaoList,BaobiaoListItem)
        ListView:loadItem(BaobiaoList, BaobiaoListItem, 16, 'loadBaobiaoListItem')
        ListView:adjust(BaobiaoList)
    end

    function loadBaobiaoListItem(list,item,index)
        Sprite:setRect(item, 0,0,480,60)
        Log:write('$$$$$$$$$$$$$$$$$$$$$$$', index,tempcitytable[index+1])
        local city = Sprite:findChild(item,'city')
        local barname = Sprite:findChild(item,'barname')
        local ratio = Sprite:findChild(item,'ratio')

        if index==0 then
            Sprite:setProperty(barname,'src',"file://image/yellow.png")
        elseif index==1 then
            Sprite:setProperty(barname,'src',"file://image/orange.png")
        elseif index==2 then
            Sprite:setProperty(barname,'src',"file://image/green.png")
        end

        item_x3, item_y3, item_w3, item_h3 = Sprite:getRect(barname)
        label_x3, label_y3, label_w3, label_h3 = Sprite:getRect(ratio)

        local broadbandinfo = tempcitytable[index+1].broadbandinfo
        local new_item_w3 = math.floor((broadbandinfo/MaxRatio)*MaxLong)
        Log:write('^^^^^^^^^^^^^^^^^^^^^^^^',item_x3, item_y3, item_w3, item_h3,new_item_w3)
        Sprite:setRect(barname,item_x3, item_y3, new_item_w3, item_h3)
        Sprite:setRect(ratio,new_item_w3-25, label_y3, label_w3, label_h3)

        Sprite:setProperty(ratio,'text',string.format("%s",broadbandinfo))
        Sprite:setProperty(city,'text',tempcitytable[index+1].city)

        --local numofcity = getJsonArrayCount(citytable)
        --Log:write('&&&&&&&&&&&&&&&&&&&&&&&&&',citytable[1],numofcity)
    end

