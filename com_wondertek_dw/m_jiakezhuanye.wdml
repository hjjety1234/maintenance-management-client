        if tabNodeData == '01' then 
            tabNodeData = 'fadian'
        else
            tabNodeData = 'xiaoqu'
        end
        -- 获取当前的月份
        local month = Sprite:getText(Sprite:findChild(rootSprite, 'monthNode'))
        Log:write('refreshHighCharts: tabNodeData, month', tabNodeData, month)
        -- 查找报表数据，并显示
        for i = 1, #g_data do
