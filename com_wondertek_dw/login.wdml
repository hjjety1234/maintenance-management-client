<root>
	<header />
	<body resolution="480,800" BuildChildrenFinished="bodyBuildChildrenFinished"
		OnSpriteEvent="bodyOnSpriteEvent" OnPluginEvent="bodyOnPluginEvent">
		<shadow rect="0,0,480,800" color="#0" alpha="255" extendstyle="1111" />
		<image name="image1" rect="0,0,480,800" border="false"
			src="file://image/login_bg.jpg" style="autosize" extendstyle="1111" />
		<node name="mainNode" rect="0,0,480,800" enable="true" active="true"
			OnKeyUp="mainNodeOnKeyUp" layouttype="1" extendstyle="1111">
			<node name="namenode" rect="0,263,480,47">
				<image name="image2" rect="154,0,277,47" border="false"
					src="file://image/input.png" style="autosize"></image>
				<label name="label1" rect="0,0,152,47" border="false" text="用户名："
					h-align="right" v-align="center" color="#ffffff" font-size="24"></label>
				<edit name="edname" rect="161,0,265,47" border="false"
					extendstyle="1111" v-center="true"></edit>
			</node>
			<node name="pwdnode" rect="0,353,480,47">
				<image name="image2" rect="154,0,277,47" border="false"
					src="file://image/input.png" style="autosize"></image>
				<label name="label1" rect="0,0,152,47" border="false" text="密  码："
					h-align="right" v-align="center" color="#ffffff" font-size="24"></label>
				<edit name="edpwd" password="true" rect="161,0,265,47" border="false"
					extendstyle="1111" v-center="true"></edit>
			</node>
			<node name="node1" rect="-4,415,480,47">
				<label name="label1" rect="200,0,152,47" border="false" text="记住密码"
					h-align="center" v-align="center" color="#ffffff" font-size="24"></label>
				<button name="btnwrite" rect="155,7,33,34" border="true" text=""
					color="#ffffff" OnSelect="writePwd" extendstyle="1111" data="1">
					<image name="image3" rect="0,0,33,34" border="true"
						src="file://image/form_psw_s.png" style="autosize" extendstyle="1111"></image>
				</button>
			</node>
			<node name="node2" rect="0,506,480,50">
				<button name="btnLogin" rect="60,0,150,50" text="登  录" color="#ffffff"
					extendstyle="1111" OnSelect="loginOnSelect"
					normal="src:file://image/btn_bg_n.png;style:sudoku-auto;sudoku:15,15,15,15;color:#ffffff"
					sel="src:file://image/btn_bg_s.png;style:sudoku-auto;sudoku:15,15,15,15;color:#000000"
					font-size="24" />
				<button name="btnForget" rect="270,0,150,50" text="清  空"
					color="#ffffff" extendstyle="1111" OnSelect="clearOnSelect"
					normal="src:file://image/btn_bg_n.png;style:sudoku-auto;sudoku:15,15,15,15;color:#ffffff"
					sel="src:file://image/btn_bg_s.png;style:sudoku-auto;sudoku:15,15,15,15;color:#000000"
					font-size="24" />
			</node>
		</node>
            <node name="menuNode" rect="0,0,480,800" extendstyle="1111" visible="false" enable="false" active="false">
                <button name="" rect="0,0,480,800" extendstyle="1111" color="#ffffff"
                    font-size="20" v-align="center" h-align="left" OnSelect="hideMenuNode"/>

                <image name="daibanimg" rect="0,700,480,100" style="autosize" extendstyle="1111" border="false" src="file://image/bottom_bg.png">
                </image>
                <button name="recordStatus" rect="0,700,480,100" extendstyle="1111" color="#ffffff"
                    font-size="20" v-align="center" h-align="left" OnSelect="menuSettingOnSelect"/>
                <label name="daibanNum" rect="0,700,480,100"  color="#ffffff" font-style="bold" text="系统设置"
                            v-align="center" h-align="center" font-size="24" extendstyle="1111" />
                
            </node>
	</body>
    <![CDATA[

    require 'com_wondertek_dw.common.framework'
    local rootSprite
    ---------------------------------------callbacks--------------------------------
    -- @brief root子节点创建完事件
    function bodyBuildChildrenFinished(sprite)
        rootSprite = sprite
    end
    -- @brief root节点消息方法
    function bodyOnSpriteEvent(msg, param)
        if msg == MSG_ACTIVATE then 
        -- 取帐号密码
        Log:write('11111111111111111111111111111111111111111')
            readPwd()
            elseif msg == MSG_DEACTIVATE then
        end
    end
    -- @brief 插件消息方法
    function bodyOnPluginEvent(msg)
        Loading:close()
        Log:write('msg=================================',msg)
        if msg == 101 then
            local loginData = Http:jsonDecode('login_istrue')
            Log:write('+++++++++++++++++',loginData)
          
            local result=loginData['code']
                if result=='0' then
                    Config:set('tasknum', loginData.taskNum) 
                	writeuserInfo()
                    Scene:go(Alias.home)
                else
                Dialog:show('登陆提醒','账户密码错误！','ok')
            
            end
            elseif msg == 101 + MSG_CACHEDATA_RELOAD then -- 101请求的数据有更新
            elseif msg == MSG_NETWORK_ERROR then -- 拨号失败
            Log:write('拨号失败')
            elseif msg > MSG_NETWORK_ERROR then -- 请求超时
            Log:write('请求超时')
        end
    end
    -- @brief 按键响应处理
    function mainNodeOnKeyUp(sprite, kc)
        if kc == Key.F2 then -- 按下返回键
            Scene:back()
            return 1
        elseif kc == Key.F1 then
            local menuNode = Sprite:findChild(rootSprite, 'menuNode')
            setAllShoworHide(menuNode, 1)
            return 1
        end
    end
    ---------------------------------------util functions---------------------------
    function loginOnSelect(sprite)
        local namenode=Sprite:findChild(rootSprite, 'namenode')
        local pwdnode=Sprite:findChild(rootSprite, 'pwdnode')
        
        local username=Sprite:getText(Sprite:findChild(namenode, 'edname')) 
        local password=Sprite:getText(Sprite:findChild(pwdnode, 'edpwd')) 
        local dataString=string.format('http://61.191.25.238:7011/nbspweb/webservice/user!doWebservice.action?usercode=%s&password=%s&cmd=%s',username,password,'wlblogin')
        --Scene:go(Alias.home)
        Loading:show(rootSprite)
        Http:request('login_istrue', dataString, 101, {useCache=false})
        
        Log:write('dataString=============================',dataString)
        --@Http:request('login_istrue', 'http://localhost:8080/DaiWeiService/mainServerlet', 101, {method='post',postData=dataString,useCache=false})
       
    end
    function writeuserInfo()
    	local namenode=Sprite:findChild(rootSprite, 'namenode')
        local pwdnode=Sprite:findChild(rootSprite, 'pwdnode')
        local flagnode=Sprite:findChild(rootSprite,'node1')
        
        local username=Sprite:getText(Sprite:findChild(namenode, 'edname')) 
        local password=Sprite:getText(Sprite:findChild(pwdnode, 'edpwd')) 
        local flag = Sprite:getData(Sprite:findChild(flagnode,'btnwrite'))
        if flag=='0' then
        	Config:set('username', username) 
        	Config:set('password', password) 
        	elseif flag=='1' then
        		Config:delete('username') 
        		Config:delete('password') 
        end

    end
    function readPwd()
    	local namenode=Sprite:findChild(rootSprite, 'namenode')
        local pwdnode=Sprite:findChild(rootSprite, 'pwdnode')
        local flagnode=Sprite:findChild(rootSprite,'node1')
        
        local usernamenode=Sprite:findChild(namenode, 'edname') 
        local passwordnode=Sprite:findChild(pwdnode, 'edpwd')
        local flagn = Sprite:findChild(flagnode,'btnwrite')
		local imgNode = Sprite:findChild(flagn,'image3')
    	local username = Config:get('username')
    	local password = Config:get('password')
    	if username~=nil and password~=nil then
    		Sprite:setProperty(imgNode, 'src', 'file://image/form_psw_select.png') 
    		Sprite:setProperty(usernamenode,'text',username)
    		Sprite:setProperty(passwordnode,'text',password)
    		Sprite:setProperty(flagn,'data','0')
    	end
    end
    function writePwd(sprite)
    	local flag = Sprite:getData(sprite)
    	local imgNode = Sprite:findChild(sprite,'image3')
    	if flag=='1' then
    		Sprite:setProperty(imgNode, 'src', 'file://image/form_psw_select.png') 
    		Sprite:setProperty(sprite,'data','0')
    		elseif flag=='0' then
    			Sprite:setProperty(imgNode, 'src', 'file://image/form_psw_s.png') 
    			Sprite:setProperty(sprite,'data','1')
    	end
    end
    function hideMenuNode(sprite)
        local menuNode = Sprite:findChild(rootSprite, 'menuNode')
        setAllShoworHide(menuNode, 0)
    end
    function menuSettingOnSelect(sprite)
        -- body
        local menuNode = Sprite:findChild(rootSprite, 'menuNode')
        setAllShoworHide(menuNode, 0)
            Scene:setReturn(Alias.login, Alias.setting)
            Scene:go(Alias.setting)
    end
    function clearOnSelect(sprite)
        -- body
        local namenode=Sprite:findChild(rootSprite, 'namenode')
        local pwdnode=Sprite:findChild(rootSprite, 'pwdnode')
        Sprite:setProperty(Sprite:findChild(namenode, 'edname'), 'text', '')
        Sprite:setProperty(Sprite:findChild(pwdnode, 'edpwd'), 'text', '')
    end
]]>
</root>
