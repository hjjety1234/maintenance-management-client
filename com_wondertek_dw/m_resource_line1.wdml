--获取统计数据返回地址（市公司）
function request()
    Loading:show(rootSprite)
    local param = 'cmd=wlblineresources&dimension='..dimension..'&page=1&pagesize=100&usercode='..Config:get('username').."&date="
    local reqURL = getUrl()..'nbspweb/webservice/leader!doWebservice.action?'..param
    Http:request('city_data', reqURL, 101, {useCache = false})
end
--加载市公司统计数据
function loadListItem(list, item, index)
    Sprite:setRect(item, 0, 0, 480, 40)
    local listItem_bg = Sprite:findChild(item, 'listItem_bg')
    if index % 2 > 0 then
       Sprite:setProperty(listItem_bg, 'src', 'file://image/ziyuan_bg.png')
    end
    -- 读取返回的数据
    local dimension4 = Sprite:findChild(item,'dimension')
    local line = Sprite:findChild(item,'line')
    local maintenance = Sprite:findChild(item,'maintenance')
    local radio = Sprite:findChild(item,'radio')
    local dimension1 = Sprite:findChild(item,'dimension1')
    local dimension2 = Sprite:findChild(item,'dimension2')
    local dimension3 = Sprite:findChild(item,'dimension3')
    local ggdwsl = Sprite:findChild(item,'ggdwsl')
    local ggdwbl = Sprite:findChild(item,'ggdwbl')
    local jitgx = Sprite:findChild(item,'jitgx')
    local shengjgx = Sprite:findChild(item,'shengjgx')
    local huijc = Sprite:findChild(item,'huijc')
    local jierc = Sprite:findChild(item,'jierc')
    local zhudw = Sprite:findChild(item,'zhudw')
    local guand = Sprite:findChild(item,'guand')
    Sprite:setProperty(dimension4,'text',city_data.value[index].dimension)
    Sprite:setProperty(dimension1,'text',city_data.value[index].dimension)
