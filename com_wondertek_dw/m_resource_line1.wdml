    Sprite:setProperty(maintenance,'text',string.format('%.1f',city_data.value[index].maintenance))
    Sprite:setProperty(ggdwsl,'text',string.format('%.1f',city_data.value[index].ggdwsl))
    Sprite:setProperty(ggdwbl,'text',string.format('%.1f',city_data.value[index].ggdwbl))
    Sprite:setProperty(jitgx,'text',string.format('%.1f',city_data.value[index].jitgx))
    Sprite:setProperty(shengjgx,'text',string.format('%.1f',city_data.value[index].shengjgx))
