-- 打开地图
function openMap(x, y, w, h)
    local xscal = SCREEN_WIDTH / 480
    local yscal = SCREEN_HEIGHT / 800
    Map:open(x*xscal, y*yscal, w*xscal, h*yscal)
    g_isMapOpen = true
end

-- 关闭地图 
function  closeMap()
    Map:close()
    g_isMapOpen = false
end

