    --删除图片
    function delPic(sprite)
         local key=Sprite:getData(sprite);
        imgdata[key]='';
        local p=Sprite:findChild(rootSprite, key);
        Sprite:setVisible(p,0)
        Sprite:setEnable(p,0)
        reloadImages()      
    end
    
