             Http:request('notice',Alias.urlServer..'record/search?record_man='.. usercode..'&storeId='..storeCode..'&checkStatus='..btnData..'&page='..Sprite:getData(curpage)..'&pagesize='..pagesize, 101, {useCache = false, method = 'post'})
        end
           Loading:show(rootSprite)
