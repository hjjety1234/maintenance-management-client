    -- @brief 详情展示
    function loadListItem(list, item, index)
        Sprite:setRect(item, 0, 0, 480, 95)
        Sprite:setProperty(item, 'extendstyle', '1111')
        local dingdanhao = Sprite:findChild(item, 'dingdanhao')
        local doorName = Sprite:findChild(item, 'doorName')
        local date=Sprite:findChild(item, 'date')
        local recordMan = Sprite:findChild(item, 'recordMan')
        local ddState=Sprite:findChild(item, 'ddState')
        local instore =Sprite:findChild(item, 'instore')
        local value = jsonDecodedDinghuo['Rows'][index]
        Sprite:setProperty(dingdanhao, 'text', value["recordCode"])
        Sprite:setProperty(instore, 'text', value["recordId"])
        Sprite:setProperty(doorName, 'text', value["storeName"])
        Sprite:setProperty(date, 'text', value["recordDate"])
        Sprite:setProperty(recordMan, 'text', value["recordMan"])
        Sprite:setProperty(ddState, 'text', value["checkStatus"])
        if Sprite:getText(ddState)=='待审核' then
           Sprite:setProperty(ddState, 'color', '#ff0000')
        elseif  Sprite:getText(ddState)=='已审核' then
            Sprite:setProperty(ddState, 'color', '#115e07')
        elseif Sprite:getText(ddState)=='已取消' then
             Sprite:setProperty(ddState, 'color', '#b800ed')
        elseif Sprite:getText(ddState)=='打回修改' then
             Sprite:setProperty(ddState, 'color', '#1027a0')
        end
    end
    function itemOnSelect(sprite)
        -- 设置要发送到定货详情的数据
        local doorName = Sprite:findChild(sprite, 'doorName')
        local recordMan = Sprite:findChild(sprite, 'recordMan')
        local dhDate = Sprite:findChild(sprite, 'date')
        local ddState = Sprite:findChild(sprite, 'ddState')
        local instore = Sprite:findChild(sprite, 'instore')
        -- 创建数据仓库，并检查列表项ID在配置文件中的配置
        local dinghuoDetailHandler = Reg:create("dinghuoDetail")
        -- 设置要发送到定货详情的数据
        
        Reg:setString(dinghuoDetailHandler, 'doorNameDet', Sprite:getText(doorName))
        Reg:setString(dinghuoDetailHandler, 'recordManDet', Sprite:getText(recordMan))
        Reg:setString(dinghuoDetailHandler, 'dhDateDet', Sprite:getText(dhDate))
        Reg:setString(dinghuoDetailHandler, 'ddStateDet', Sprite:getText(ddState))
        Reg:setString(dinghuoDetailHandler, 'dingdanhaoDet', Sprite:getText(instore))
        -- 进行页面跳转
       -- Scene:setReturn(Alias.dinghuo, Alias.dinghuoDetail)
        Scene:go(Alias.dinghuoDetail,1)
    end
    
    --@brief 点击搜索按钮消息处理函数
    function OnSearchButtonClicked()
