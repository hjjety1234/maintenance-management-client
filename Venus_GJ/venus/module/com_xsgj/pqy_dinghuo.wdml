        local checkStatus1= Sprite:findChild(rootSprite, 'qianshou')
        local btnData = Sprite:getData(checkStatus1)
        Log:write("btnDatabtnDatabtnData",btnData)
        --门店ID
        local store=Sprite:findChild(rootSprite, 'errorBtn')
        local storeCode=Sprite:getData(store)
        Log:write("storeDatastoreDatastoreDatastoreDatastoreDatae",storeCode)
        initList()
        requestDinghuoSearchList('notice', 101, storeCode,btnData)
       
    end
      --@brief 请求搜索订货列表
    function requestDinghuoSearchList(tag, num, inStore, recordStatus)
       -- local requestURL = Alias.urlServer..'mRecord/search?'..'inStore='..inStore..'&recordStatus='..recordStatus..'&page='..Sprite:getData(curpage)..'&pagesize='..pagesize
        local requestURL = Alias.urlServer..'record/search?record_man='.. usercode..'&storeId='..inStore..'&checkStatus='..recordStatus..'&page='..Sprite:getData(curpage)..'&pagesize='..pagesize
        Log:write("++++++++++++++requestURL:", requestURL)
         -- 删除原有列表项
        local list = Sprite:findChild(rootSprite, 'sampleList')
        ListView:removeAllItems(list)
        Http:request(tag, requestURL, num,{useCache=false})
        Log:write("+++++++++requst success!");
    end
