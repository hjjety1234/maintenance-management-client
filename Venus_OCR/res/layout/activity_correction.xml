<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/correction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:orientation="vertical">
        
        <ImageView
	        android:id="@+id/navigmaske"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:contentDescription="@string/take_photo"
	        android:scaleType="fitXY"
	        android:src="@drawable/sftop" />
        
        <ImageView
	        android:id="@+id/back"
	        android:layout_width="60dp"
	        android:layout_height="50dp"
	        android:background="@drawable/btn_back"/>

	    <ImageView
	        android:id="@+id/next"
	        android:layout_width="60dp"
	        android:layout_height="50dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/btn_next" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/loading_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/correction"
        android:orientation="vertical">
        
        <ImageView
	        android:id="@+id/loading"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/take_photo"
	        android:scaleType="fitXY"
	        android:src="@drawable/sfxy" />
        
        <ImageView
           	android:id="@+id/running"
	        android:layout_width="345dp"
	        android:layout_height="345dp"
	        android:layout_marginLeft="65dp"
	        android:layout_marginRight="65dp"
	        android:contentDescription="@string/take_photo"
	        android:src="@drawable/sfrun1"/>
        
	        <!-- 身份证泄露 -->
		   <LinearLayout
		       android:id="@+id/reveal_id"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:layout_marginTop="35dp"
		       android:layout_below="@id/running"
		       android:orientation="horizontal" >

		       <TextView
		           android:id="@+id/reveal"
		           android:layout_width="fill_parent"
		           android:layout_height="30dp"
		           android:layout_marginLeft="36dp"
		           android:layout_marginRight="36dp"
		           android:gravity="left"
		           android:text="@string/default_text"
		           android:textColor="#555555"
				   android:background="#00ffffff"
				   android:textSize="20sp" />
		   </LinearLayout>
		   
		   
		   <!-- 身份证挂失 -->
		   <LinearLayout
		       android:id="@+id/loss_id"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:layout_marginTop="40dp"
		       android:layout_below="@id/reveal_id"
		       android:orientation="horizontal" >

		       <TextView
		           android:id="@+id/loss"
		           android:layout_width="fill_parent"
		           android:layout_height="30dp"
		           android:layout_marginLeft="36dp"
		           android:layout_marginRight="36dp"
		           android:gravity="left"
		           android:text="@string/default_text"
		           android:textColor="#555555"
				   android:background="#00ffffff"
				   android:textSize="20sp" />
		   </LinearLayout>
		   
    </RelativeLayout>
    
    

		

</RelativeLayout>