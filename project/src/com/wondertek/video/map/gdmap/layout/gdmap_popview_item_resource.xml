<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
	
	    <LinearLayout
	        android:id="@+id/top_layout_person"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/mc_bg"
	        android:orientation="horizontal" >
	
	        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="false"
		        android:orientation="vertical" >
		
		        <com.wondertek.video.map.gdmap.ScrollForeverTextView
		            android:id="@+id/gdmap_item_resname1"
		            android:layout_width="150dp"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="8dp"
		            android:layout_marginRight="8dp"
		            android:layout_marginTop="5dp"
		            android:layout_weight="1"
		            android:ellipsize="marquee"
		            android:marqueeRepeatLimit="marquee_forever"
					android:scrollHorizontally="true"
		            android:padding="3dip"
		            android:singleLine="true"
		            android:text=""
		            android:textColor="#ffffff" />
		        
		         <LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal" >
			
			       <com.wondertek.video.map.gdmap.ScrollForeverTextView
			            android:id="@+id/gdmap_item_resname2"
			            android:layout_width="150px"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="8dp"
			            android:layout_marginRight="8dp"
			            android:layout_marginTop="5dp"
			            android:layout_weight="1"
			            android:ellipsize="marquee"
			            android:marqueeRepeatLimit="marquee_forever"
					    android:scrollHorizontally="true"
			            android:padding="3dip"
			            android:singleLine="true"
			            android:text=""
			            android:textColor="#ffffff" />
			         
			    </LinearLayout>
		        
		    </LinearLayout>
	
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:scaleType="fitXY"
	            android:src="@drawable/line_y" />
	
	        <ImageButton
	            android:id="@+id/gdmap_item_resbtn"
	            android:layout_width="40dp"
	            android:clickable="true"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="10dp"
	            android:layout_height="40dp"
	            android:src="@drawable/ico_more"
	            android:scaleType="fitXY" />
	    </LinearLayout>
	    
	   <LinearLayout
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/top_layout_person"
	        android:layout_centerInParent="true"
	        android:orientation="horizontal" >
		    <ImageView
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_marginLeft="20dp"
		         android:scaleType="center"
		         android:src="@drawable/mcsj_bg" />
	
	  </LinearLayout>
</RelativeLayout>