<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="#ff000000"
  >
   <ImageView android:id="@+id/iconTextNotification"
   			  android:layout_width="50dip"
   			  android:layout_height="50dip"
   			  android:layout_marginTop="8dip" 
			  android:layout_marginLeft="4dip"
   			  android:src="@drawable/icon">
   </ImageView>
   <TextView android:id="@+id/showNoitficationTextContent" 
               android:layout_width="200dip"    
               android:layout_height="22dip"
               android:textSize="17dp"
               android:textColor="#ffffff"
               android:layout_marginTop="8dip"
			   android:layout_marginLeft="20dip"
			   android:layout_toRightOf="@+id/iconTextNotification"
			   android:ellipsize="end"
               android:text="手机视频推荐节目">
   </TextView>
   <TextView android:id="@+id/showNoitficationTextSecondContent" 
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:textSize="12dp"
               android:textColor="#BEBEBE"
               android:layout_marginTop="8dip" 
			   android:layout_marginLeft="20dip"
			   android:layout_toRightOf="@+id/iconTextNotification"
			   android:layout_below="@+id/showNoitficationTextContent"
               android:text="手机视频推荐节目">
   </TextView>
   <TextView android:id="@+id/notificationTextTime" 
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:textSize="12dp"
			   android:textColor="#BEBEBE"
               android:layout_marginTop="8dip"
			   android:layout_marginRight="15dip"
			   android:layout_alignParentRight="true"
               android:text="00:00">
   </TextView> 
</RelativeLayout>