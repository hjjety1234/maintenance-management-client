<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="280dp"
        android:layout_height="186dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/gps_alert" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:textColor="#424242"
        android:textSize="15sp"
        android:text="@string/gps_tip" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gps_cancel"
        android:text="@string/gps_cancel" 
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/button_yes"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/button_cancel"
        android:layout_alignBottom="@+id/button_cancel"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gps_open"
        android:text="@string/gps_yes" 
        android:textColor="#ffffff"/>

</RelativeLayout>