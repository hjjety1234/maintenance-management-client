<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  >
    <ImageView android:id="@+id/iconProcessNotification"
   			  android:layout_width="40dip"
   			  android:layout_height="40dip"
   			  android:layout_marginTop="10dip" 
			  android:layout_marginLeft="5dip"
   			  android:src="@drawable/icon">
   </ImageView>
   <TextView android:id="@+id/showNoitficationProcessContent" 
               android:layout_width="220dip"    
               android:layout_height="wrap_content"
               android:textSize="15dp"
               android:textColor="#ec6941"
               android:layout_marginTop="10dip" 
			   android:layout_marginLeft="50dip"
			   android:ellipsize="end"
			   android:singleLine="true"
               android:text="手机视频推荐节目提示">
   </TextView>
   <ProgressBar
       android:id="@+id/progressbar"
       style="?android:attr/progressBarStyleHorizontal"
       android:layout_width="220dip"
       android:layout_height="20dip"
       android:layout_marginTop="35dip" 
	   android:layout_marginLeft="50dip"/>
   <TextView android:id="@+id/processpercent" 
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:textSize="15dp"
               android:textColor="#ec6941"
               android:layout_marginTop="35dip" 
			   android:layout_marginLeft="10dip"
			   android:layout_toRightOf="@+id/progressbar"
               android:text="15%">
   </TextView>
   <TextView android:id="@+id/notificationProcessTime" 
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"
               android:textSize="15dp"
			   android:textColor="#ec6941"
               android:layout_marginTop="10dip" 
			   android:layout_marginRight="10dip"
			   android:layout_alignParentRight="true"
               android:text="00:00">
   </TextView> 
</RelativeLayout>