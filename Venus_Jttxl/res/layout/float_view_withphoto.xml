<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="245dp"
    android:layout_height="280dp"
    android:gravity="top"
    android:orientation="vertical"
    android:windowAnimationStyle="@android:style/Animation.Translucent"
    android:windowBackground="@android:color/transparent"
    android:windowIsTranslucent="true" >

    <ImageView
        android:id="@+id/incoming_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sign_bg" />

    <ImageView
        android:id="@+id/caller_info_bg"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/incoming_bg"
        android:layout_alignTop="@drawable/caller_info"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/caller_info"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/name_headship_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/caller_info_bg"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/headship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_deptinfo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_headship_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/small_logo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/small_logo"
            android:visibility="visible" />

        <TextView
            android:id="@+id/deptinfo"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:text=""
            android:textColor="#4e4a4a"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/regioninfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/incoming_bg"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"
        android:text=""
        android:textColor="#878484"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>