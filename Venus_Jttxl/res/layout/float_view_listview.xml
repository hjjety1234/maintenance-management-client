<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:windowAnimationStyle="@android:style/Animation.Translucent"
    android:windowBackground="@android:color/transparent"
    android:windowIsTranslucent="true" >

    <ImageView
        android:id="@+id/border_top"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/border_top"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/logo_name"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_below="@+id/border_top"
        android:layout_centerHorizontal="true"
        android:background="#eeeeee"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/m_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/small_logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/caller_name"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text=""
            android:textColor="#000000"
            android:textSize="28sp" />
    </LinearLayout>

    <com.wondertek.video.caller.NonScrollableListView
        android:id="@+id/listView1"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_name"
        android:divider="@drawable/listitem_line" >
    </com.wondertek.video.caller.NonScrollableListView>

    <ImageView
        android:id="@+id/border_bottom"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView1"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/border_bottom"
        tools:ignore="ContentDescription" />

</RelativeLayout>