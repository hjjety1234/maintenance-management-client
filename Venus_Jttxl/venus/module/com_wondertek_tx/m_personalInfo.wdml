    local personImg_d = Sprite:findChild(rootSprite,'picImg_d1')
    local personImg_s = Sprite:findChild(rootSprite,'picImg_s1')
    
    local imgUrlSplit = Split(Config:get('personImgUrl'),',')
    Log:write(" imgUrlSplit[1] = ",imgUrlSplit[1])
    Log:write(" imgUrlSplit[2] = ",imgUrlSplit[2])
    if imgUrlSplit[1] == employeeId then
        Log:write("设置本地图片为个人头像")
        Sprite:setProperty(personImg_d,'src',imgUrlSplit[2])
        Sprite:setProperty(personImg_s,'src',imgUrlSplit[2])
    else
        if picture ~= '' then
            -- 查看图片URL
            local requestURL = Alias.url_server..'mobile/image/'..picture 
            Log:write("查看图片URL:", requestURL)  
            Http:request('picUrlTag', requestURL, 102,{useCache=false,method = 'post'}) 
            Log:write("设置远程图片为个人头像")
            local remoteImgPath = Alias.url_server..'resources/mobileImg/'..picture -- 设置远程图片地址
            Log:write("remoteImgPath = "..remoteImgPath)
            Sprite:setProperty(personImg_d,'src',remoteImgPath)
            Sprite:setProperty(personImg_s,'src',remoteImgPath) 
        end 
    end                     
end

-- 更新用户数据
function updateUserData()
    -- 修改用户SQL
    local sqlUpdate = "UPDATE tb_c_employee SET employee_name = '"..returnValue[0].employee_name..
            "',department_id = '"..returnValue[0].department_id.."',department_name = '"..
            returnValue[0].department_name.."',headship_level = '"..returnValue[0].headship_level..
            "',headship_name = '"..returnValue[0].headshipName.."',mobile = '"..
            returnValue[0].mobile.."',mobile_short = '"..returnValue[0].mobile_short..
            "',tel = '"..returnValue[0].tel.."',tel_short = '"..returnValue[0].tel_short..
            "',email = '"..returnValue[0].email.."',versionNum = '"..returnValue[0].versionNum..
            "',picture = '"..returnValue[0].picture.."',employee_firstword = '"..
            returnValue[0].employee_firstword.."',employee_fullword = '"..returnValue[0].employee_fullword..
            "',parent_department_name = '"..returnValue[0].parent_department_name..
            "',display_order = '"..returnValue[0].display_order..
            "',department_fax = '"..returnValue[0].department_fax..
            "' WHERE employee_id = '"..employeeId.."';"
    Log:write("sqlUpdate = ",sqlUpdate)
    -- 删除用户SQL
    local sqlDelete = "DELETE FROM tb_c_employee WHERE employee_id = '"..employeeId.."';"
    Log:write("sqlDelete = ",sqlDelete)  
    bRet, errMsg = Sqlite:update(databaseName, "BEGIN;")
    Log:write("单个用户信息更新添加事务:bRet = "..bRet.." errMsg ="..errMsg)
    if returnValue[0].update_type == '1' or returnValue[0].update_type == '0' then
        bRet, errMsg = Sqlite:update(databaseName, sqlUpdate)
        Log:write("修改用户:bRet = "..bRet.." errMsg ="..errMsg)
    elseif returnValue[0].update_type == '2' then
        bRet, errMsg = Sqlite:update(databaseName, sqlDelete)
        Log:write("删除用户:bRet = "..bRet.." errMsg ="..errMsg)
    end 
    bRet, errMsg = Sqlite:update(databaseName, "COMMIT;") 
    Log:write("单个用户信息更新添加事务结束:bRet = "..bRet.." errMsg ="..errMsg)
end

