-- 获取本地库中用户版本号
function getUserVersion()
    local Path = getDownloadPath().."sqlitedownload" 
    Log:write("path= "..Path)
    if IO:dirExist(Path) == false then 
        IO:dirCreate(Path)
    end
    databaseName = Path..'/jttxlDatabase'
    bRet, errMsg = Sqlite:open(databaseName) 
    Log:write("创建数据库jttxlDatabase成功:bRet = "..bRet.." errMsg ="..errMsg)
    loadUserData()
    versionNum = retUserTable[1][9] 
    Log:write("当前用户的版本号 ======= ",versionNum)
    doRefurbish()      
end

