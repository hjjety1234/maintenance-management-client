-- @brief 插件消息方法
function bodyOnPluginEvent(msg)
    if msg == 101 then
        UmsAgent:onLoadFinish()
        jsonDecodedEmployee = Http:jsonDecode('employeeTag')
        -- 如果更新用户信息返回数据为空，则加载本地库中数据
        if jsonDecodedEmployee == '' or jsonDecodedEmployee == nil then
            Log:write("此时更新用户没有返回数据")
            return
        end 
        Log:write('更新单个联系人返回数据 = ', jsonDecodedEmployee)
        returnValue = jsonDecodedEmployee.value
        local updateFlag = jsonDecodedEmployee.updateFlag
        if updateFlag == '1' then
            -- 更新该人员信息
            updateUserData() 
            loadUserData()
        end 
    elseif msg == 102 then   
    elseif msg == 101 + MSG_CACHEDATA_RELOAD then -- 101请求的数据有更新
    elseif msg == MSG_NETWORK_ERROR then -- 拨号失败
        Log:write('拨号失败')
    elseif msg > MSG_NETWORK_ERROR then -- 请求超时
        Log:write('请求超时')
    end
end

